{
  "compilerOptions": {
    /* ✅ Suporte a JS + TS */
    "allowJs": true,
    "checkJs": false,

    /* ✅ Next/React */
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2022"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ✅ Qualidade/Build estável */
    "skipLibCheck": true,
    "incremental": true,
    "strict": false,          

    /* ✅ Seus aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/app/*": ["./app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
